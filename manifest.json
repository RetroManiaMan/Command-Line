{
  "manifest_version": 3,
  "name": "Command Line",
  "description": "Spotlight-like command console for Chrome with AI and Calculator. Type commands like /open, /search, /ask ai, /tab close, /tab list.",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "Toggle Command Line overlay"
    }
  },
  "host_permissions": ["<all_urls>"]
}
